{
  "Subscriptions": [
    {
      "Name": "DemoSubscriptionName",
      "ReadObjects": "True",
      "ReadCosts": "True"
    }
  ],
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "errorLogfile": {
        "type": "File",
        "fileName": "${basedir}/azure-costs-error-${shortdate}.log",
        "deleteOldFileOnStartup": "true",
        "layout": "${longdate}|${level:uppercase=true}|${callsite:className=true:fileName=true:includeSourcePath=false:methodName=true}|${message}"
      },
      "infoLogfile": {
        "type": "File",
        "fileName": "${basedir}/azure-costs-info-${shortdate}.log",
        "deleteOldFileOnStartup": "true",
        "layout": "${longdate}|${level:uppercase=true}|${callsite:className=true:fileName=true:includeSourcePath=false:methodName=true}|${message}"
      },
      "logconsole": {
        "type": "Console"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "infoLogfile"
      },
      {
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "errorLogfile"
      }
    ]
  }
}